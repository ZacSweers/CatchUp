<resources>

  <!-- Base application theme. -->
  <style name="Theme.CatchUp.Base" parent="Theme.MaterialComponents.DayNight.NoActionBar">
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>

    <!-- Let's be real, no one wants this by default -->
    <item name="android:splitMotionEvents">false</item>

    <!-- Don't want the image viewer to jump when we toggle sysui bars visibility. -->
    <item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item>
  </style>

  <style name="Theme.CatchUp" parent="Theme.CatchUp.Base" />

  <style name="Theme.CatchUp.Starting" parent="@style/Theme.SplashScreen">
    <item name="windowSplashScreenBackground">@color/colorPrimary</item>
    <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher</item>
    <item name="postSplashScreenTheme">@style/Theme.CatchUp</item>
  </style>

</resources>
